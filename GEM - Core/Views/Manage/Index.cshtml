@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);

    IEnumerable<Event> EventsOwned = ViewData["EventsOwned"] as IEnumerable<Event>;
    IEnumerable<Event> EventsIn = ViewData["EventsIn"] as IEnumerable<Event>;
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>
<br />
<div class="panel panel-default todo-panel">
    <div class="panel-heading">My Created Events</div>
    <div class="table-responsive">
        @if (!(EventsOwned.Count() == 0))
        {
            <table style="width: 100%;" class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Date:</td>
                        <td>Title:</td>
                        <td>Description:</td>
                        <td>Location:</td>
                        <td>Update/Delete</td>
                    </tr>
                </thead>
                <tbody id="srchTable">
                    <!-- Begin Table Entries-->
                    @foreach (Event item in EventsOwned)
                    {
                        <tr>
                            <td>@item.DateAndTime.ToString("MMM dd yyyy h:MM tt")</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Location</td>
                            <td><a style="margin: 0 4px 4px 0" class="btn btn-primary btn-sm">Update</a><a style="margin-bottom: 4px" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModal">Delete</a></td>
                        </tr>
                    }
                    <!-- End Table Entries-->
                </tbody>
            </table>
        }
    </div>

    <div class="panel-footer">
    </div>
</div>
<br />
<div class="panel panel-default todo-panel">
    <div class="panel-heading">Events I Am Attending</div>
    <div class="table-responsive">
        @if (!(EventsIn.Count() == 0))
        {
            <table style="width: 100%;" class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Date:</td>
                        <td>Title:</td>
                        <td>Description:</td>
                        <td>Location:</td>
                        <td>Leave Event</td>
                    </tr>
                </thead>
                <tbody id="srchTable">
                    <!-- Begin Table Entries-->
                    @foreach (Event item in EventsIn)
                    {
                        <tr>
                            <td>@item.DateAndTime.ToString("MMM dd yyyy h:MM tt")</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Location</td>
                            <td><a style="margin-right: 4px" class="btn btn-warning btn-sm">Leave Event</a></td>
                        </tr>
                    }
                    <!-- End Table Entries-->
                </tbody>
            </table>
        }
    </div>

    <div class="panel-footer">
    </div>
</div>

<!-- Begin Delete Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete 'event name' event?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
<!-- End Delete Modal-->


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
