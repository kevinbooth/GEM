@model EventViewModel

@{
    ViewData["Title"] = "Home Page";
    int i = 0;
}

<!-- Begin banner -->
<div class="jumbotron light-blue">
    <div class="container body-content">
        <h1 id="header--name">GEM</h1>
        <p class="lead">Your Favorite Event Management Tool</p>
        <p><a href="/Browse" class="btn btn-default btn-lg">Browse &raquo;</a></p>
    </div>
</div>
<!-- End banner -->

<div class="container body-content">
    <div class="panel panel-default todo-panel">
        <div class="panel-heading">Latest Events</div>

        <div class="table-responsive">
            <table style="width: 100%" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <td>Date:</td>
                        <td>Title</td>
                        <td>Description</td>
                        <td>Location</td>
                    </tr>
                </thead>
                <tbody>
                    <!-- Begin Table Display From Models -->
                    @foreach (var item in Model.Events.Reverse()) // Displaying top 10 latest events
                    {
                        if (i < 10)
                        {
                        <tr>
                            <td>@item.DateAndTime.ToString("MM/dd/yyyy h:mm tt")</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Location</td>
                        </tr>

                        }
                        i++;
                    }
                    <!-- Begin Table Display From Models -->
                </tbody>
            </table>
        </div>

        <div class="panel-footer">
        </div>
    </div>
</div>
