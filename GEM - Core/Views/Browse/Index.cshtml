@model EventViewModel

@{
    ViewData["Title"] = "Browse";
}


<div class="container body-content">
    <h2>Browse Events</h2>

    <div class="panel panel-default todo-panel">
        <div class="panel-heading">Latest Events</div>
        <div class="table-responsive">
            <table style="width: 100%;" class="table table-hover table-striped table-bordered" id="browseData">
                <thead>
                    <tr>
                        <td>Date:</td>
                        <td>Title:</td>
                        <td>Description:</td>
                        <td>Location:</td>
                    </tr>
                </thead>
                <tbody id="srchTable">
                    <!-- Begin Table Entries-->
                    @foreach (var item in Model.Events)
                    {
                    <tr>
                        <td>@item.DateAndTime</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Location</td>
                    </tr>
                    }
                    <!-- End Table Entries-->
                </tbody>
            </table>
        </div>

        <div class="panel-footer">
        </div>
    </div>
</div>

